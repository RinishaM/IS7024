@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    List<AirportDetails.Airport> requiredAirports = (List<AirportDetails.Airport>)ViewData["RequiredAirports"];
    CityDetails.City city = (CityDetails.City)ViewData["City"];
}
    <head>
        <title>Airport Dictionary</title>
        <link rel="stylesheet" href="~/css/StyleSheet.css" type="text/css" />
    </head>
<h1>Enter City</h1>

<form action="" method="POST">
    <div class="form-group">
        <label class="control-label" for="search"><strong></strong></label>
        <input type="text" class="form-control" name="search" id="search" />
    </div>
    <div class="form-group">
        <input type="submit" value="Search" class="btn btn-danger" />
    </div>
</form>

@if (Model.SearchCompleted)

{
<div class="text-center">
    <h2 class="display-4">Airport Dictionary</h2>
    <h4>@city.Name, @city.Country, @city.Subcountry</h4>
    <br />
    <div class="row">
        <div class="col-2">
            @if (requiredAirports.Count() > 0)
            {
                var type_count = requiredAirports.GroupBy(t => t.Type)
                       .Select(t => new
                       {
                           Type = t.Key,
                           Count = t.Count()
                       }).ToList();
                foreach (var a in type_count)
                {
                    <div class="w3-row-padding w3-margin-bottom">
                        <div class="w3-quarter">
                            <div class="container w3-red w3-padding-16">
                                <h3>@a.Count</h3>
                                <div class="w3-clear"></div>
                                <h6>@a.Type</h6>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="col-10">
            <table class="table table-border table-striped table-hover auto-index">
                @{
                    int count = 0;
                }
                <thead class="thead-dark">
                    <tr>
                        <th>S.No.</th>
                        <th>Airport Name</th>
                        <th>Type</th>
                        <th>Local Code</th>
                        <th>Elevation (in ft.)</th>
                    </tr>
                </thead>
                <tbody>
                    @if (requiredAirports.Count > 0)
                    {
                        @foreach (AirportDetails.Airport airport in requiredAirports)
                        {
                            <tr>
                                <td>
                                    @{ count++; }
                                    @count
                                </td>
                                <td>@airport.Name</td>
                                <td>@airport.Type</td>
                                <td>@airport.LocalCode</td>
                                <td>@airport.ElevationFeet</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="danger">
                            <td colspan="4" class="text-center">
                                No results found for term "@Model.Search"
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <br />
    </div>
    </div>
        }
